<div class="container">
  <h2>Horizontal form: control states</h2>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label class="col-sm-2 control-label">Focused</label>
      <div class="col-sm-10">
        <input class="form-control" id="focusedInput" type="text" value="Click to focus...">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label">Disabled</label>
      <div class="col-sm-10">
        <input class="form-control" id="disabledInput" type="text" placeholder="Disabled input here..." disabled>
      </div>
    </div>
  </form>
</div>

<div class = "panel panel-info">
  <div class = "panel panel-heading">Dados do Paciente (<%= titulo %>)</div>

<div class = "panel panel-body">

  <div class="container">
  <%= form_for(@paciente, :class => "form-horizontal", :role => "form") do |f| %>
    
    <%= render "shared/error_messages", :target => @paciente %>  
    
    <div class="form-group">
      <% f.label 'Paciente', class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :nm_paciente, :size => '60', :class => "form-control" %>
      </tr>
      <tr>
        <td><%= f.label 'Data Nascimento'  %></td>
        
        <td><%= f.text_field :dt_nascimento  %>
        
        </td>
      
      </tr>
      <tr>
        <td><%= f.label 'Estado Civil' %></td>
        <td><%= f.select :estado_civil, @estado_civis, :prompt=>'Selecione...' %></td>
      </tr>
      <tr>
        <td><%= f.label 'Endereço' %></td>
        <td><%= f.text_field :endereco, :size => '60' %></td>
      </tr>
      <tr>
        <td><%= f.label'Cidade' %></td>
        <td><%= f.text_field :cidade, :size => '60' %></td>
      </tr>
      <tr>
        <td><%= f.label 'Profissão' %></td>
        <td><%= f.text_field :profissao, :size => '60' %></td>
      </tr>
      <tr>
        <td><%= f.label 'Fone' %></td>
        <td><%= f.text_field :fone_casa, :size => '60' %></td>
      </tr>
      <tr>
        <td><%= f.label 'Natural' %></td>
        <td><%= f.text_field :e_mail, :size => '60' %></td>
      </tr>
      <tr>
        <td><%= f.label 'Primeira consulta' %></td>
        <td><%= f.text_field :dt_prim_consulta %></td>
      </tr>
      <tr>
        <td><%= f.label 'Situação' %></td>
        <td><%= f.text_field :situacao %></td>
      </tr>
      <tr>
        <td><%= f.label 'Encaminhado por' %></td>
        <td><%= f.text_field :encaminhado_por, :size => '60' %></td>
      </tr>
    </table>
  </div>
    <div id="direita">
    <fieldset>
    <legend>Anamnese</legend>
    <p>
      <label for="paciente_obs1">Q.P./H.P.M.A.</label>
      <%= f.text_area :obs1, :size => '70x3', :title => 'Campo 1 cadastrado nos parametros' %>
    </p>
    <p>
      <label for="paciente_obs2">A.P./I.D.</label>
      <%= f.text_area :obs2, :cols => "200",  :rows => "3", :title => 'Campo 2 cadastrado nos parametros' %>
    </p>
    <table>
    <tr><th colspan=2>Antecedentes Familiares</th></tr>
      <tr>
      <td><%= f.label 'Pai' %></td>
      <td><%= f.text_field :antec_pai, :size => '60' %></td>
    </tr>
    <tr>
      <td><%= f.label 'Mãe' %></td>
      <td><%= f.text_field :antec_mae, :size => '60' %></td>
    </tr>
    <tr>
      <td><%= f.label 'Irmãos' %></td>
      <td><%= f.text_field :antec_irmaos, :size => '60' %></td>
    </tr>
    <tr>
      <td><%= f.label 'Cônjuge' %></td>
      <td><%= f.text_field :antec_conjuge, :size => '60' %></td>
    </tr>
    <tr>
      <td><%= f.label 'Filhos' %></td>
      <td><%= f.text_field :antec_filhos, :size => '60' %></td>
    </tr>
  </tr>
  </table>
    <p>
      <label for="paciente_obs3">E.F.</label>
      <%= f.text_area :obs3, :size => '70x3', :title => 'Campo 3 cadastrado nos paramentros' %>
    </p>
    <p>
      <label for="paciente_obs4">Conduta H.D.</label>
      <%= f.text_area :obs4, :size => '70x3', :title => 'Campo 4 cadastrado nos parametros' %>
    </p>
    <p>
      <%= f.label 'Evolução' %><br>
      <%= f.text_area :obs5, :size => '70x15', :title => 'Campo 5 cadastrado nos parametros' %>
    </p>
    <%= f.submit nome_botao %>
    </p>
  </div>  
<% end %>
