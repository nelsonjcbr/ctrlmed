<fieldset>
<legend>Vias de aplicação (<%= titulo %>)</legend>
<div id="esquerda">
  
  <% form_for(@viaaplic) do |f| %>
    <%= f.error_messages %>
    <div>
    <table>
      <p>
        <tr>
        <td><%= f.label 'Descrição' %></td>
        <td><%= f.text_field :descrição, :size => '60' %></td>
      </tr>
    </table>
  <p>
    <%= f.submit nome_botao %>
  </p>
<% end %>
</fieldset>