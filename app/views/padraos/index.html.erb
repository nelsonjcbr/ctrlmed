<%- model_class = Padrao -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Padrões de campos'], :model => model_class.model_name.human.titleize %></h1>
</div>

<div class="alert alert-info">
  <strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    INFO!</strong> Aqui são definidos padrões para alguns campos da tela 
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:campo) %></th>
      <th><%= model_class.human_attribute_name(:valores) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @padraos.each do |padrao| %>
      <tr>
        <td><%= link_to padrao.id, padrao_path(padrao) %></td>
        <td><%= link_to padrao.campo, padrao_path(padrao) %></td>
        <td><%= padrao.valores %></td>
        <td><%=l padrao.created_at, :format => :default %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_padrao_path(padrao), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      padrao_path(padrao),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_padrao_path,
            :class => 'btn btn-primary' %>
