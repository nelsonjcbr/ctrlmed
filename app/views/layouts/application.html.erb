<html>
  <head>
    <title>CTRL+Med</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %> 
  </head>
 
  <body role="document">

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
        <%= link_to "Ctrl+Med", root_url, style: "color:#CCFF33;font-weight:200;", class:"navbar-brand"%>
      </div>
  
      <div class="collapse navbar-collapse">
        
        <ul class="nav navbar-nav">
          <li><%= link_to "Pacientes", pacientes_url %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Configurações <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Padrões", padraos_url %></li>
              <li class="divider"></li>
              <li><%= link_to "Via Aplicação", viaaplics_url %></li>
              <li><%= link_to "Medicamentos", medicamentos_url %></li>
              <li><%= link_to "Receitas", receitas_url %></li>
              <li class="divider"></li>
              <li><%= link_to "Exames", exames_url %></li>
            </ul>
           </li>
        </ul>
        <div class="col-sm-3 col-md-3 pull-right">
          <div class="navbar-text">Paciente</div>
          <form class="navbar-form" role="search" action="/pacientes" method="get">
            <div class="input-group">
               <%= text_field_tag :paciente_filtro, params[:paciente_filtro], class: "form-control", placeholder: "Search"  %>
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form>
        </div>
 
      </div>
    </div>

    <div class="container theme-showcase" role="main">

      <%= yield %>

    </div> <!-- /container -->

  </body>
</html>