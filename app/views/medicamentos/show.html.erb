<%- model_class = Medicamento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @medicamento.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dose) %>:</strong></dt>
  <dd><%= @medicamento.dose %></dd>
  <dt><strong><%= model_class.human_attribute_name(:viaaplic_id) %>:</strong></dt>
  <dd><%= @medicamento.viaaplic.descricao %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              medicamentos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medicamento_path(@medicamento), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medicamento_path(@medicamento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
