<h1>Lista Solicitações de Exames</h1>

<table>
  <tr>
    <th>Data</th>
    <th>Paciente</th>
  </tr>

<% for solexame in @solexames %>
  <tr>
    <td><%=h solexame.data %></td>
    <td><%=h solexame.paciente.nm_paciente %></td>
    <td><%= link_to 'Mostrar', solexame %></td>
    <td><%= link_to 'Editar', edit_solexame_path(solexame) %></td>
    <td><%= link_to 'Deletar', solexame, :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova solicitação', new_solexame_path %>
