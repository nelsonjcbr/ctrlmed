</dl>

    <div class="container bg-info">

<h3>Receitas</h3>
<table >
<% @paciente.receitas.each do |r| %>
  <tr>
    <th><%= r.data %>&nbsp;
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_receita_path(r, :paciente => @paciente), :class => 'btn btn-link' %>&nbsp;
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              receita_path(@paciente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza que quer excluir toda o cadastro e a história do paciente?')) },
              :class => 'btn btn-link' %>
    </th>
  </tr>
  <% r.receitais.each do |i| %>
    <tr>
    <td><%= i.medicamento.try(:descricao).to_s + ' ' + i.dose + '(' + i.qtde.to_s + ')' %></td>
    </tr>
  <% end %>
  <% end %>
</table>
<%= link_to 'Adicionar Receita', 
    new_receita_path( :paciente => @paciente ),
    :class => "btn btn-link" %>

<h3>Exames Solicitados</h3>
<table >
<% @paciente.solexames.each do |r| %>
  <tr>
    <th><%= r.data %></th>
    <th><%= link_to 'Alterar', edit_solexame_path(r, :paciente => @paciente) %></th>
    <th><%= link_to 'Excluir', r, :confirm => 'Você tem certeza que deseja excluir?', :controller => :solexames, :method => :delete %></th>
  </tr>
  <% r.solexameis.each do |i| %>
    <tr>
    <td><%= i.exame.descricao %></td>
    </tr>
  <% end %>
  <tr><td>.</td></tr>
  <% end %>
</table>
<%= link_to 'Adicionar Solicitacao de Exame', 
    new_solexame_path( :paciente => @paciente ),
    :class => "btn btn-link" %>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pacientes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_paciente_path(@paciente), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              paciente_path(@paciente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeja que quer excluir toda o cadastro e a história do paciente?')) },
              :class => 'btn btn-danger' %>
  <%= link_to 'Prescrever Receita', 
              new_receita_path( :paciente => @paciente ), :class => "btn btn-info" %> 
  <%= link_to 'Solicitar de Exame', 
              new_solexame_path( :paciente => @paciente ), :class => "btn btn-info" %>
</div>  

