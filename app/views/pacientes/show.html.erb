  <dd><h2><%=t '.title', :default => @paciente.nm_paciente %></h2></dd>

  <dt><strong><%= model_class.human_attribute_name("Data nascimento") %>:</strong></dt>
  <dd><%= @paciente.dt_nascimento %> - <%= @paciente.idade %></dd>

