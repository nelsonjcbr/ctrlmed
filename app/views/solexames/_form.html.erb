<h1><%= titulo %> Solicitação de Exames</h1>

<%= simple_form_for @solexame do |f| %>

  <%= f.select :paciente_id, @pacientes %>

  <%= f.input :data, format: :default, label: 'Data da receita', html5: true, input_html: { class: 'input-large' } %>

  <%= f.select :clilab_id, @clilabs %>

  Itens= <%= @solexame.solexameis.count %>

  <%= f.simple_fields_for :solexameis, @solexameis do |builder| %>
    <%= render 'solexamei_fields', f: builder %>
  <% end %>

  <%= link_to_add_fields "Adiciona Item", f, :solexameis %>
  <br>
  <br>
  <%= f.submit "Gravar", :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                solexames_path, :class => 'btn' %>
<% end %>

